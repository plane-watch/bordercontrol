<html>
<head>
<style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
</style>
<meta http-equiv="Refresh" content="5"> 
</head>
<body>
<table style="width:100%">
    <tr>
        <th>Feeder</th>
        <th>Conn #</th>
        <th>Proto</th>
        <th>Src</th>
        <th>Dst</th>
        <th>Bytes In/Out</th>
        <th>Connection Time</th>
    </tr>
{{range $index, $element := .}}
    {{ $firstRow := true }}
	<tr>
		<td rowspan="{{ len .Connections }}">
			{{.Label}}</br>UUID: {{$index}}</br>{{.Lat}} {{.Lon}}
		</td>
	{{range $cindex, $celement := .Connections}}
		{{ if $firstRow }}{{ else }}<tr>{{ $firstRow = false }}{{ end }}
		<td>{{ $cindex }}</td>
        <td>{{ $celement.Proto }}</td>
        <td>{{ $celement.Src }}</td>
        <td>{{ $celement.Dst }}</td>
        <td>{{ $celement.BytesIn }} / {{ $celement.BytesOut }}</td>
        <td>{{ $celement.TimeConnected }}</td>
	</tr>
	{{end}}
{{end}}
